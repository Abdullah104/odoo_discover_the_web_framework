<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
  <t t-name="awesome_owl.todo_list">
    <div class="m-2 p-2 border d-inline-block">
      <input t-on-keyup="addTodo" class="form-control mb-3" type="text" placeholder="Add a todo" />
      <TodoItem t-foreach="todos" t-as="todo" t-key="todo.id" todo="todo" />
    </div>
  </t>
</templates>