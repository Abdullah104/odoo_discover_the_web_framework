<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="display" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="openCustomersKanban">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
            </t>
            <div t-if="statistics.isReady" class="d-flex flex-wrap">
                <DashboardItem>
                    <NumberCard title="'Average amount of t-shirt by order this month'" value="statistics.average_quantity" />
                </DashboardItem>
                <DashboardItem>
                    <NumberCard title="'Average time for an order to go from \'new\' to \'sent\' or \'cancelled\''" value="statistics.average_time" />
                </DashboardItem>
                <DashboardItem>
                    <NumberCard title="'Number of new orders this month'" value="statistics.nb_cancelled_orders" />
                </DashboardItem>
                <DashboardItem>
                    <NumberCard title="'Number of cancelled orders this month'" value="statistics.nb_new_orders" />
                </DashboardItem>
                <DashboardItem>
                    <NumberCard title="'Total amount of orders this month'" value="statistics.total_amount" />
                </DashboardItem>
                <DashboardItem size="2">
                    <PieChartCard title="'Shirt orders by size'" values="statistics.orders_by_size" />
                </DashboardItem>
            </div>
        </Layout>
    </t>
</templates>